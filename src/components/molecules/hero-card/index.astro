---
import FreeTitle from './../../molecules/free-title/index.astro';
import Paragraph from './../../atoms/paragraph/index.astro';
import Highlight from './../../atoms/highlight/index.astro';
import Block from './../../atoms/block/index.astro';

const { title, subtitle, description, src } = Astro.props;
---

<div class="card">
    <div class="card__image">
        <div class="card__image_container">
            <img src={src} alt={title} />
        </div>
    </div>
    <Block padding="30px 0 0 0">
        <Block padding="0 0 24px 0">
            <FreeTitle as="h6">
                {title}
                {subtitle && <Highlight> | {subtitle}</Highlight>}
            </FreeTitle>
        </Block>
        <Paragraph>
            {description}
        </Paragraph>
    </Block>
</div>

<style lang="scss">
    .card {
        top: 10dvh;
        background-color: #ffffff;
        border-radius: 20px;
        margin-bottom: 50px;
        &:last-child {
            height: auto;
        }
        @media screen and (min-width: 768px) {
            margin-bottom: 100px;
        }
        .card__image {
            width: 100%;
            height: 60dvh;
            border-radius: 20px;
            background-color: #999999;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 40px;
            .card__image_container {
                height: 100%;
                width: 100%;
                position: relative;
                img {
                    position: absolute;
                    top: 50%;
                    left: 50%;
                    transform: translateX(-50%) translateY(-50%);
                    border-radius: 20px;
                    max-width: 100%;
                    max-height: 100%;
                }
            }
        }
    }
</style>