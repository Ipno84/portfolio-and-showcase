---
const { as } = Astro.props;
---

{as === 'h1' && (
    <h1 class="heading"><slot /></h1>
)}

{as === 'h2' && (
    <h2 class="heading"><slot /></h2>
)}

{as === 'h3' && (
    <h3 class="heading"><slot /></h3>
)}

{as === 'h4' && (
    <h4 class="heading"><slot /></h4>
)}

{as === 'h5' && (
    <h5 class="heading"><slot /></h5>
)}

{as === 'h6' && (
    <h6 class="heading"><slot /></h6>
)}

<style lang="scss">
    .heading {
        margin: 0;
        font-family: "Poppins", sans-serif;
        letter-spacing: -0.04rem;
        color: #24262f;
        font-weight: 700;
    }
    h1.heading {
        font-size: 4rem;
        line-height: 4rem;
        @media screen and (min-width: 768px) {
            font-size: 5.5rem;
            line-height: 5.5rem;
        }
    }
    h2.heading {
        font-size: 4.5rem;
        line-height: 4.5rem;
    }
    h3.heading {
        font-size: 3.675rem;
        line-height: 3.675rem;
    }
    h4.heading {
        font-size: 2.75rem;
        line-height: 2.75rem;
    }
    h5.heading {
        font-size: 1.875rem;
        line-height: 1.875rem;
    }
    h6.heading {
        font-size: 1.5rem;
        line-height: 1.5rem;
    }
</style>